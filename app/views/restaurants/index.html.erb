<h1>Restaurants</h1>
<div class="cards">
  <% @restaurants.each do |restaurant| %>
    <div class="card" style="width: 18rem;">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"> <%= restaurant.name %></h5>
        <p class="card-text"> Address: <%= restaurant.address %></p>
        <a href="#" class="btn btn-primary">View restaurant</a>
      </div>
    </div>
  <% end %>
</div>
