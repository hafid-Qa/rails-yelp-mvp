<div class="h-100 p-3 bg-light border rounded-3 my-3 shadow">
  <div class= "">
    <h2><%=  @restaurant.name %></h2>
    <p> Rating    
      <% if @restaurant.reviews.count > 1 %>
        <%= @restaurant.reviews.sum(:rating) / @restaurant.reviews.count %>
      <% else %>
        <%= @restaurant.reviews.sum(:rating)  %>
      <% end %>
    </p>
    <p>Details: <%= @restaurant.address %></p>
    <p>category: <%= @restaurant.phone_number %></p>
    <p>category: <%= @restaurant.category %></p>
    <%= link_to "create review", new_restaurant_review_path(@restaurant), class:  "btn btn-success"%>
  </div >
  <h3>Reviews</h3>
  <% @restaurant.reviews.each do |review| %>
    <%= link_to review_path(review) ,data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
    <div class="h-100 p-3  border rounded-3 my-3 shadow-sm" style="--bs-bg-opacity: .5">
      <p> <%= review.content %> </p>
    </div>
  <% end %>
  <div style= "width:200px" class="d-flex justify-content-around align-items-center">
    <%= link_to "Home", root_path, class: "btn btn-secondary"   %>
  </div>
